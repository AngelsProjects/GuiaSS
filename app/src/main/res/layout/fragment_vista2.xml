<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".ui.MainActivity">

    <!-- aqui se carga el ToolBar que se encuentra es res -> layout -> main_toolbar.xml -->
    <include
        android:id="@+id/toolbar"
        layout="@layout/main_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <!-- aqui en adelante va el resto que tenga el activity -->
    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:noHistory="true"
        tools:context=".ui.ProcesoPasoaPaso">

        <ImageView
            android:id="@+id/iv_logoInfo"
            android:layout_width="65dp"
            android:layout_height="60dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="5dp"
            android:contentDescription="@string/img_logoDesc"
            android:gravity="center"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@mipmap/logo" />

        <TextView
            android:id="@+id/txt_infoTitle"
            android:layout_width="287dp"
            android:layout_height="21dp"
            android:layout_marginStart="60dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="20dp"
            android:gravity="center"
            android:text="@string/infoTitle"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/iv_logoInfo"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txt_infoDesc"
            android:layout_width="287dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="36dp"
            android:layout_marginRight="20dp"
            android:gravity="center"
            android:text="@string/infoDesc"
            android:textSize="10sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/iv_logoInfo"
            app:layout_constraintTop_toTopOf="parent" />

        <ScrollView
            android:id="@+id/sv_main"
            android:layout_width="386dp"
            android:layout_height="465dp"
            android:layout_marginTop="80dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:id="@+id/ll_scrollMain"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="175dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textViewInfo21"
                        android:layout_width="138dp"
                        android:layout_height="21dp"
                        android:layout_marginStart="100dp"
                        android:layout_marginTop="12dp"
                        android:layout_marginEnd="8dp"
                        android:text="Pasos siguientes:"
                        tools:layout_editor_absoluteX="163dp"
                        tools:layout_editor_absoluteY="68dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textViewInfo22"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="80dp"
                        android:layout_marginTop="12dp"
                        android:layout_marginEnd="8dp"
                        android:text="Que papeles ocupas:
-Carta asignaciÃ³n servicio social.
-Carta compromiso servicio social.
-Solicitud de servicio social.
-Tarjeta de control de servicio social. "
                        tools:layout_editor_absoluteX="163dp"
                        tools:layout_editor_absoluteY="130dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textViewInfo23"
                        android:layout_width="wrap_content"
                        android:layout_height="127dp"
                        android:layout_marginStart="60dp"
                        android:layout_marginTop="12dp"
                        android:layout_marginEnd="8dp"
                        android:text="Link donde puedes descargar esos formatos:"
                        tools:layout_editor_absoluteX="163dp"
                        tools:layout_editor_absoluteY="68dp" />
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </android.support.constraint.ConstraintLayout>
</LinearLayout>