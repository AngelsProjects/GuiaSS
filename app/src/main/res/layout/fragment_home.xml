                        tools:layout_editor_absoluteX="163dp"
                        tools:layout_editor_absoluteY="68dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
