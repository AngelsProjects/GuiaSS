<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="41dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="41dp"
        android:layout_marginBottom="20dp"
        android:fitsSystemWindows="true"
        android:paddingBottom="@dimen/activity_vertical_margin"
        tools:context=".views.GeneralDataFragment">

        <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignTop="@+id/null"
            android:layout_marginTop="10dp"
            android:layout_marginStart="1dp"
            android:layout_marginEnd="1dp"
            android:noHistory="true"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            tools:layout_editor_absoluteY="56dp"
            tools:showIn="@layout/activity_datos_generales">

            <ScrollView
                android:id="@+id/sv_main"
                android:layout_width="370dp"
                android:layout_height="wrap_content"

                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <LinearLayout
                    android:id="@+id/ll_scrollMain"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    tools:layout_editor_absoluteX="0dp"
                    tools:layout_editor_absoluteY="175dp">


                    <TextView
                        android:id="@+id/textViewInfo5"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@android:color/holo_green_light"
                        android:gravity="center_horizontal"
                        android:text="Datos generales"
                        android:textColor="#000dff"
                        tools:layout_editor_absoluteX="163dp"
                        tools:layout_editor_absoluteY="68dp" />


                    <TextView
                        android:id="@+id/textViewInfo6"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="0dp"

                        android:layout_marginTop="0dp"
                        android:text="Nombre del encargado:
Hector Alejandro Pelaez" />


                    <TextView
                        android:id="@+id/textViewInfo7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Puesto:
Jefe de la oficina del servicio social
y desarrollo comunitario.
Numero del servicio social: 5-80-49-11"
                        tools:layout_editor_absoluteX="163dp"
                        tools:layout_editor_absoluteY="130dp" />


                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp"
                        android:text="Horario"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.17"
                        app:layout_constraintStart_toStartOf="parent"
                        tools:layout_editor_absoluteY="212dp" />


                    <CalendarView
                        android:layout_width="197dp"
                        android:layout_height="310dp">

                    </CalendarView>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="0dp"
                        android:layout_marginTop="0dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/textView2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="0dp"
                            android:layout_marginTop="4dp"
                            android:layout_marginEnd="8dp"
                            android:text="Donde estas la oficina
del servicio social
Proximamente Mapa" />

                        <Button
                            android:id="@+id/button3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="12dp"
                            android:layout_marginEnd="8dp"
                            android:text="Mapa"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            tools:layout_editor_absoluteY="431dp" />

                    </LinearLayout>

                </LinearLayout>
            </ScrollView>
        </android.support.constraint.ConstraintLayout>
    </LinearLayout>
</RelativeLayout>