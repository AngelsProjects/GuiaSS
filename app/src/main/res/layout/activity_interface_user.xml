                        android:text="no" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textViewInfo12"
                        android:layout_width="200dp"
                        android:layout_height="37dp"
