<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".ui.MainActivity">

    <!-- aqui se carga el ToolBar que se encuentra es res -> layout -> main_toolbar.xml -->
    <include
        android:id="@+id/toolbar"
        layout="@layout/main_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- aqui en adelante va el resto que tenga el activity -->

    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ScrollView
            android:id="@+id/sv_main"
            android:layout_width="366dp"
            android:layout_height="394dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="64dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:id="@+id/ll_scrollMain"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txt_req"
                        android:layout_width="287dp"
                        android:layout_height="wrap_content"
                        android:text="@string/txt_req"
                        android:textSize="18sp" />

                    <Button
                        android:id="@+id/btn_req"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Ver mas" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txt_dss"
                        android:layout_width="287dp"
                        android:layout_height="wrap_content"
                        android:text="@string/txt_dss"
                        android:textSize="18sp" />

                    <Button
                        android:id="@+id/btn_dss"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Ver mas" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txt_dh"
                        android:layout_width="287dp"
                        android:layout_height="wrap_content"
                        android:text="@string/txt_dh"
                        android:textSize="18sp" />

                    <Button
                        android:id="@+id/btn_dh"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Ver mas" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txt_pp"
                        android:layout_width="287dp"
                        android:layout_height="wrap_content"
                        android:text="@string/txt_pp"
                        android:textSize="18sp" />

                    <Button
                        android:id="@+id/btn_pp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Ver mas" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txt_ps"
                        android:layout_width="287dp"
                        android:layout_height="wrap_content"
                        android:text="@string/txt_ps"
                        android:textSize="18sp" />

                    <Button
                        android:id="@+id/btn_ps"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Ver mas" />
                </LinearLayout>

            </LinearLayout>
        </ScrollView>

    </android.support.constraint.ConstraintLayout>
</LinearLayout>