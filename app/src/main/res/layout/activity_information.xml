<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:noHistory="true"
    tools:context=".ui.Information">

    <ImageView
        android:id="@+id/iv_logoInfo"
        android:layout_width="65dp"
        android:layout_height="60dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="5dp"
        android:contentDescription="@string/img_logoDesc"
        android:gravity="center"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/logo" />

    <TextView
        android:id="@+id/txt_infoTitle"
        android:layout_width="287dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="20dp"
        android:gravity="center"
        android:text="@string/infoTitle"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/iv_logoInfo"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_infoDesc"
        android:layout_width="287dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="36dp"
        android:layout_marginRight="20dp"
        android:gravity="center"
        android:text="@string/infoDesc"
        android:textSize="10sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/iv_logoInfo"
        app:layout_constraintTop_toTopOf="parent" />
</android.support.constraint.ConstraintLayout>